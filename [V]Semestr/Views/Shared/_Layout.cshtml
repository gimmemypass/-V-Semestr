<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
</head>
<body>
    <div>
        <a asp-controller="Test" asp-action="Index">Test</a>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Panel" asp-action="EditPost">New Post</a>
        <a asp-controller="Panel" asp-action="EditCategory">New Category</a>
        <a asp-controller="Panel" asp-action="Index">AdminPanel</a>
        @if (User.Identity.IsAuthenticated)
        {
            <ul >

                <li>
                    @User.Identity.Name
                </li>
                <li>
                    <a asp-controller="Auth" asp-action="Logout">Log out</a>
                </li>
            </ul>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login">Sign In</a>
        }

    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
