<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />

    <environment include="Production" >
        <link href="~/css/site.min.css" rel="stylesheet" />
    </environment>
    <environment include="Development" >
        <link href="~/css/site.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <div class="main-img">
        <span class="blog-title">Time to make a Game</span>
        <form asp-action="Index" asp-controller="Home" method="get">
            @if (!Model.GetType().Name.Equals("IndexViewModel"))
            {
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="category" value="" />
                <input class="search" type="text" placeholder="Search Blog" name="search" value="" />
            }
            else
            {
                <input type="hidden" name="pageNumber" value="@Model.PageNumber" />
                <input type="hidden" name="category" value="@Model.Category" />
                <input class="search" type="text" placeholder="Search Blog" name="search" value="@Model.Search" />
            }
        </form>
    </div>
    <div>
        <nav>
            @{
                (Model.GetType().Name != "IndexViewModel").ToString();
            }
            <a asp-controller="Test" asp-action="Index">Test</a>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Panel" asp-action="EditPost">New Post</a>
            <a asp-controller="Panel" asp-action="EditCategory">New Category</a>
            @if (User.Identity.IsAuthenticated)
            {
                <p style="color: white;">
                    @User.Identity.Name
                </p>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
                }
                <a asp-controller="Auth" asp-action="Logout">(Log out)</a>
            }
            else
            {
                <a asp-controller="Auth" asp-action="Login">Sign In</a>
            }
        </nav>
    </div>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>
