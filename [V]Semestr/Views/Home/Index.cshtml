@model IndexViewModel
@{
    ViewBag.Title = "Blog Website";
    ViewBag.Describe = "The blog about Game Development";
    ViewBag.Keywords = "blog programming games gamedev gamedesign unity";
    var base_path = Context.Request.PathBase;
}
@*<div class="main-img">
    <span class="title">Time to make a Game</span>
</div>*@
<div class="container">
    @*<ul>
        @foreach(var post in Model)
        {
            <li>
                <a asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
                    @post.Title
                </a>
            </li>
        }
    </ul>*@
    @foreach(var post in Model.Posts)
    {
        <a class="post" asp-controller="Home" asp-action="Post" asp-route-id="@post.Id">
            @if (!String.IsNullOrEmpty(post.CoverImagePath)) { 
                var image_path = $"{base_path}/Image/{post.CoverImagePath}";
                <img src="@image_path"/>
            }
            <span class="title">
                @post.Title
            </span>
        </a>
    }

    <div>
        @if(Model.PageNumber > 1)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-category="@Model.Category" asp-route-pageNumber="@(Model.PageNumber - 1)">Prev</a>
        }
        @if (Model.NextPage)
        {
            <a asp-action="Index" asp-controller="Home" asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
        }
    </div>
</div>
